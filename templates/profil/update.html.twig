{% extends 'base.html.twig' %}

{% block title %}Update profil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/natStyle.css') }}">
{% endblock %}

{% block body %}
    
    <div class="container-fluid mx-auto justify-content-center" style="width: 500px;">
    
        <h1 class="m-5">Mon profil</h1>

        {#        {{  form(userForm) }} #}

        {{ form_start(userForm) }}
        <div class="formGroup">
            {{ form_row(userForm.pseudo) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.prenom) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.nom) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.telephone) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.email) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.password) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.campus) }}
        </div>
        <div class="formGroup">
            {{ form_row(userForm.photo) }}
        </div>
        {{ form_end(userForm) }}
    </div>
      
{% endblock %}