{# templates/form/password_form.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Change Password</h1>

    {{ form_start(userForm) }}
        {{ form_errors(userForm) }}

        <div class="form-group">
            {{ form_label(userForm.password.first) }}
            {{ form_widget(userForm.password.first) }}
            {{ form_errors(userForm.password.first) }}
        </div>

        <div class="form-group">
            {{ form_label(userForm.password.second) }}
            {{ form_widget(userForm.password.second) }}
            {{ form_errors(userForm.password.second) }}
        </div>

        <button class="btn btn-dark btn-sm m-1" type="submit">Submit</button>
    {{ form_end(userForm) }}
{% endblock %}
